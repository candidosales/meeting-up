<div class="panel panel-default">
  <div class="panel-heading">
  </div>
<%= simple_form_for @local, html: {role: "form"} do |f| %>
	<div class="panel-body">
	  <%= f.error_notification %>

	  <div class="row">
	    <%= f.input :descricao, placeholder: 'Descrição', wrapper_html: {class: 'col-md-6'} %>
	  </div>

  </div>
  <div class="panel-footer">
	    <%= f.button :submit, t('.save', :default => t("helpers.links.save")), class: 'btn btn-primary' %>
	  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), locais_path, :class => 'btn btn-outline btn-default' %>
  </div>
<% end %>
</div>