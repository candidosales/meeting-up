<% content_for :title_page do %>
<%=t "Reunião" %>
<%end%>
<div class="panel panel-default">
  <div class="panel-heading">
  </div>
  <div class="panel-body">

    <p>
      <strong>Titulo:</strong>
      <%= @evento.titulo %>
    </p>

    <p>
      <strong>De:</strong> 
      <%= l @evento.data_inicial %>

      <strong>até:</strong>
      <%= l @evento.data_final  %>
    </p>
    
    <p>
      <strong>Status:</strong>
      <%= @evento.status_text%>
    </p>

    <p>
      <strong>Coordenador:</strong>
      <% unless @evento.coordenador.nil? %>
        <%= @evento.coordenador.nome %>
      <% end %>
    </p>

    <p>
      <strong>Redator:</strong>
      <% unless @evento.redator.nil? %>
        <%= @evento.redator.nome %>
      <% end %>
    </p>

    <p>
      <strong>Controlador do tempo:</strong>
      <%unless @evento.controlador.nil? %>
        <%= @evento.controlador.nome %>
      <% end %>
    </p>
    
    <p>
      <%unless @evento.periodicidade.nil? %>
        <strong>Repetir:</strong>
        <%= @evento.periodicidade.descricao %>
      <% end %>
    </p>


    <br/>

    <p>
      <strong>Participantes:</strong>
    </p>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Nome</th>
        </tr>
      </thead>

      <tbody>
        <% @evento.participantes.each do |participante| %>
          <tr>
            <td><%= participante.nome %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br/>
    <br/>

    <p>
      <strong>Lembretes:</strong>
    </p>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Tipo</th>
          <th>Intervalo</th>
          <th>Período</th>
        </tr>
      </thead>

      <tbody>
        <% @evento.lembretes.each do |lembrete| %>
          <tr>
            <td><%= lembrete.tipo.text %></td>
            <td><%= lembrete.intervalo %></td>
            <td><%= lembrete.periodo.text %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br/>
    <br/>

  </div>  
  <div class="panel-footer">
    <%= link_to t('.edit', :default => t("helpers.links.edit")),  edit_forum_evento_path(@forum, @evento), :class => 'btn btn-primary' %>
    <%= link_to t('.back', :default => t("helpers.links.back")), forum_reunioes_path, :class => 'btn btn-outline btn-default' %>
  </div>
</div>