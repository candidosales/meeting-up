<!-- Modal -->
<div class="modal fade" id="adiar-encaminhamento-<%=encaminhamento.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title" id="myModalLabel">Confirmar adiamento de
                 encaminhamento</h4>
            </div>
            
        <%= simple_form_for encaminhamento, url: adiar_forum_encaminhamento_path(@forum, encaminhamento), html: {role: "form"} do |f| %>
          <div class="panel-body">
            <div class="row">
              <%= f.error_notification %>
              
              <div class= 'col-md-6'> 
                <p>
                  <strong>Prazo antigo:</strong>
                  <%= l encaminhamento.previsao %>
                </p>

                <p>
                  <strong>Novo prazo: </strong>
                  <% unless encaminhamento.previsao_solicitada.nil? %>
                    <%= l encaminhamento.previsao_solicitada %>
                  <%end%>  
                </p>
              </div>  

              <%=f.input :previsao_antiga, :as => :hidden, :input_html => { :value => encaminhamento.previsao } %>

              <%=f.input :previsao, :as => :hidden, :input_html => { :value => encaminhamento.previsao_solicitada } %>
            </div>

          </div>
          <div class="panel-footer">
            <%= f.button :submit, t('.save', :default => t("helpers.links.save")), class: 'btn btn-primary' , data: {disable_with: 'Adiando encaminhamento...'} %>

            <%= link_to t('.cancel', :default => t("helpers.links.cancel")), '#', :class => 'btn btn-outline btn-default' , data: {dismiss: 'modal'} %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
