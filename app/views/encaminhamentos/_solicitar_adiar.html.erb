<!-- Modal -->
<div class="modal fade" id="solicitar-adiar-encaminhamento-<%=encaminhamento.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title" id="myModalLabel">Solicitar adiamento de
                 encaminhamento</h4>
            </div>
            
        <%= simple_form_for encaminhamento, url: solicitar_adiar_forum_encaminhamento_path(@forum, encaminhamento), html: {role: "form"} do |f| %>
          <div class="panel-body">
            <div class="row">
              <%= f.error_notification %>
              
              <%= f.input :previsao_solicitada, label: 'Nova Data', as: :string, wrapper_html: {class: 'col-md-5'}, mask: :datetime %>
            </div>

          </div>
          <div class="panel-footer">
            <%= f.button :submit, t('.save', :default => t("helpers.links.save")), class: 'btn btn-primary' , data: {disable_with: 'Solicitando adiamento...'} %>

            <%= link_to t('.cancel', :default => t("helpers.links.cancel")), '#', :class => 'btn btn-outline btn-default' , data: {dismiss: 'modal'} %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
