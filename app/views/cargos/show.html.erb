<% content_for :title_page do %>
<%=t('.show', :default => t("cargos.show.title"))%>
<%end%>
<div class="panel panel-default">
  <div class="panel-heading">
  </div>
  <div class="panel-body">
	<p>
	  <strong>Descrição:</strong>
	  <%= @cargo.descricao %>
	</p>
  </div>	
  <div class="panel-footer">
	  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_cargo_path(@cargo), :class => 'btn btn-primary' %>
	  <%= link_to t('.back', :default => t("helpers.links.back")), cargos_path, :class => 'btn btn-outline btn-default' %>
  </div>
</div>