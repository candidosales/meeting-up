<% content_for :class_container do %>
col-md-4 col-md-offset-4
<% end %>

<div class="login-panel panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Por favor, identifique-se</h3>
    </div>
     <div class="panel-body">
         <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        	<%= f.error_notification %>
        	<%= f.input :login, :label => "E-mail/Matrícula", :placeholder =>'E-mail/Matrícula', :required => false, :autofocus => true, :input_html => {:maxlength => 100, :size => 10} %>
        	<%= f.input :password, :label => "Senha", :placeholder =>'Senha', :required => false, :input_html => {:maxlength => 100, :size => 10} %>
            <%= f.input :remember_me, :label => "Continuar conectado", :as => :boolean, wrapper: :vertical_boolean %>
            <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %>
            <%= f.button :submit, "Entrar", class: 'btn btn-lg btn-success btn-block' %>
            </div>
        <% end %> 
    </div>       
</div>