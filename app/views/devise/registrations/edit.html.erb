<% content_for :title_page do %>
  Editar Usuário
<%end%>

<div class="panel panel-default">
  <div class="panel-heading">
  </div>
<%= simple_form_for(resource, :as => resource_name, :url =>  registration_path(resource_name), :html => { :method => :put}) do |f| %>
  <div class="panel-body">
    <%= f.error_notification %>

    <div class="row">
      <%= f.input :nome, :required => true, wrapper_html: {class: 'col-md-3'} %>
      <%= f.input :email, :required => true, :autofocus => true, wrapper_html: {class: 'col-md-3'} %>
      <div class="form-group string required user_nome col-md-3">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, wrapper_html: {class: 'col-md-3'} %>
      </div> 
    </div>

    <div class="row">  
        <%= f.association :cargo, label_method: :descricao, :required => true, wrapper_html: {class: 'col-md-4'} %>
        <%= f.association :setor, label_method: :descricao, :required => true, wrapper_html: {class: 'col-md-4'} %>
    </div>

    <div class="row">  
      <%= f.input :password, :label => "Senha", :required => false, :hint => "Deixe em branco caso nao queria alterá-la", wrapper_html: {class: 'col-md-3'}%>
      <%= f.input :password_confirmation, :label => "Confirmação de senha", :required => false, wrapper_html: {class: 'col-md-3'} %>
      <%= f.input :current_password, :label => "Senha atual", :required => true, :hint => "Nós precisamos de sua senha atual para realizar as alterações", wrapper_html: {class: 'col-md-3'} %>
    </div> 

  </div>
  <div class="panel-footer">
        <%= f.button :submit, t('.save', :default => t("helpers.links.save")), class: 'btn btn-primary' %>
        <%= link_to "Voltar", :back, :class => 'btn btn-outline btn-default' %>
      
  </div>
<% end %>
</div>


