<% content_for :class_container do %>
col-md-6 col-md-offset-3
<% end %>
<div class="login-panel panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Altere sua senha</h3>
    </div>
     <div class="panel-body">
        <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
              <%= f.error_notification %>
              <%= f.input :reset_password_token, :as => :hidden %>
              <%= f.full_error :reset_password_token %>
              <%= f.input :password, :label => "Senha", :placeholder =>'Senha', :required => false, :input_html => {:maxlength => 100, :size => 10} %>
              <%= f.input :password_confirmation, :label => "Confirmação de senha", :placeholder =>'Confirmação de senha', :required => false, :input_html => {:maxlength => 100, :size => 10} %>
                <%= f.button :submit, "Alterar minha senha", class: 'btn btn-lg btn-success btn-block' %>
            </div>
        <% end %> 
    </div>       
</div>
