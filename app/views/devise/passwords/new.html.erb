<% content_for :class_container do %>
col-md-6 col-md-offset-3
<% end %>
<div class="login-panel panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Esqueceu sua senha?</h3>
    </div>
     <div class="panel-body">
		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= f.error_notification %>
		  <fieldset>
			  <div class="form-inputs">
			    <%= f.input :login, :label => "E-mail/Matrícula", :required => true, :autofocus => true %>
			  </div>
			  <div class="form-actions">
			    <%= f.button :submit, "Envie-me as instruções", class: 'btn btn-lg btn-success btn-block' %>
			  </div>
		  </fieldset>  
		<% end %>
	</div>
</div>		