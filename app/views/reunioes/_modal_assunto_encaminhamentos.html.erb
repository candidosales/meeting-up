<%= simple_form_for [@forum, Encaminhamento.new(assunto: assunto, reuniao: @reuniao)], html: {role: "form"}, data: {remote: true} do |f| %>
  <div id="create-encaminhamento_Assunto_<%= assunto.id %>_Encaminhamento_-messages" class="alert alert-danger" style="display: none">
    <p>Por favor, verifique os erros antes de continuar:</p>
    <ul></ul>
  </div>
  <div class="row">
    <%= f.hidden_field :assunto_id %>
    <%= f.hidden_field :reuniao_id %>
    <%= f.input :descricao, as: :text, label: false, placeholder: 'Adicionar encaminhamento',
          input_html: { class: "autoresize encaminhamento_descricao_Assunto_#{assunto.id}_Encaminhamento_" },
          wrapper_html: {class: 'col-md-10', style: 'margin-top: 10px'}  %>
  </div>
  <div class="row">
    <%= f.association :users, label: 'Destinar a', collection: buscar_participantes(@forum), label_method: :nome, wrapper_html: {class: 'col-md-6'}, input_html: {class: "select2-users encaminhamento_usuarios_Assunto_#{assunto.id}_Encaminhamento_"} %>
    <%= f.input :previsao, label: "Prazo", as: :string, wrapper_html: {class: 'col-md-4'}, mask: :date,
          input_html: { class: "encaminhamento_previsao_Assunto_#{assunto.id}_Encaminhamento_" }%>
  </div>  
  <div class="row">
    <div class="col-md-12">
      <%= f.button :submit, 'Adicionar encaminhamento', class: 'btn-success' %>
    </div>
  </div>
<% end %>

<br>

<div class="row">
  <div id="encaminhamentos-Assunto_<%= assunto.id %>_Encaminhamento_" class="col-md-12">
    <%= render assunto.encaminhamentos %>
  </div>
</div>
