<div class="modal fade modal-assunto-add-nota-enc" id="add-nota-encaminhamento-<%=assunto.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-assunto-id="<%=assunto.id%>">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="panel panel-warning">
        <div class="panel-heading">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel"><%= assunto.descricao %></h4>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <ul class="nav nav-tabs">
                <li class="active">
                  <%= link_to 'Notas', "#tab-notas-assunto-#{assunto.id}", data: { toggle: 'tab' } %>
                </li>
                <li>
                  <%= link_to 'Encaminhamentos', "#tab-encaminhamentos-assunto-#{assunto.id}", data: { toggle: 'tab' } %>
                </li>
                <li>
                  <%= link_to 'Assuntos', "#tab-assuntos-assunto-#{assunto.id}", data: { toggle: 'tab' } %>
                </li>
              </ul>
              <div class="tab-content">
                <div id="tab-notas-assunto-<%= assunto.id %>" class="tab-pane active">
                  <%= render 'modal_assunto_notas', assunto: assunto %>
                </div>
                <div id="tab-encaminhamentos-assunto-<%= assunto.id %>" class="tab-pane">
                  <%= render 'modal_assunto_encaminhamentos', assunto: assunto %>
                </div>
                <div id="tab-assuntos-assunto-<%= assunto.id %>" class="tab-pane">
                  <%= render 'modal_assunto_assuntos', assunto: assunto %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
