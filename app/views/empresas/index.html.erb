<%- model_class = Empresa -%>
<% content_for :title_page do %>
  <%=t '.title', :default => model_class.model_name.human.pluralize %>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
          <%= link_to t('.new', :default => t("empresas.new.title")), new_empresa_path(), :class => "btn btn-link pull-right" %>

        </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:nome) %></th>
            <th><%= model_class.human_attribute_name(:cnpj) %></th>
            <th><%= model_class.human_attribute_name(:logo) %></th>
            <th>Opções</th>
          </tr>
        </thead>
        
        <tbody>
          <% @empresas.each do |empresa| %>
            <tr>
              <td><%= link_to empresa.nome, empresa_path(empresa) %></td>
              <td><%= empresa.cnpj %></td>
              <td><%= image_tag empresa.logo.url(:thumb) %></td>
              <td>
                 <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_empresa_path(empresa) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
  <div class="panel-footer"><!-- paginação aqui... --></div>
</div>

