<% content_for :title_page do %>
<%=t('.show', :default => t("usuarios.show.title"))%>
<%end%>
<div class="panel panel-default">
  <div class="panel-heading">
  </div>
  <div class="panel-body">

<p>
  <strong>Nome:</strong>
  <%= @user.nome %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<% if @user.convidado? %>
  <p>
    <strong>Qualificação:</strong>
    <%= @user.qualificacao %>
  </p>
<% end %>

<% if !@user.convidado? %>
    <p>
      <strong>CPF:</strong>
      <%= @user.cpf %>
    </p>

    <% if @user.data_nascimento %>
      <p>
        <strong>Data de nascimento:</strong>
        <%= l @user.data_nascimento %>
      </p>
    <% end %>

    <p>
      <strong>Cargo:</strong>
      <% unless @user.cargo.nil? %>
        <%= @user.cargo.descricao %>
      <% end %>
    </p>

    <p>
      <strong>Matricula:</strong>
      <%= @user.matricula %>
    </p>
<% end %>

 
<p>
  <strong>Avatar:</strong>
  <%= image_tag @user.avatar.url(:thumb) %>
</p>

<% unless @user.foruns.empty? %>
        <h3> Fóruns </h3>
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Sigla</th>
              <th>Nome</th>
              <th>Descrição</th>
              <th>Coordenador</th>
              
            </tr>
          </thead>
            <tbody>
            <% @user.foruns.each do |f| %>
              <tr>
                <td><%= f.sigla %></td>
                <td><%= f.nome %></td>
                <td><%= f.descricao %></td>
                <td><%= f.coordenador.nome %></td>
                
              </tr>
            <% end %>
          </tbody>
        </table>
<% end %>

<br/>

  </div>  
  <div class="panel-footer">
    <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(@user), :class => 'btn btn-primary' %>
    <%= link_to t('.back', :default => t("helpers.links.back")), users_path, :class => 'btn btn-outline btn-default' %>

  </div>
</div>
