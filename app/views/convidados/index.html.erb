<% content_for :title_page do %>
  Convidados
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
          <%= link_to t('.new', :default => t("users.new.title")), new_convidado_path , :class => "btn btn-link pull-right" %>

        </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th> Nome </th>
            <th> E-mail </th>
            <th> Qualificação </th>
            <th> Opções </th>
          </tr>
        </thead>
        
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.nome, user_path(user) %></td>
              <td><%= user.email %></td>
              <td><%= user.qualificacao %></td>
              <td>
                 <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_user_path(user) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
  <div class="panel-footer"><!-- paginação aqui... --></div>
</div>

