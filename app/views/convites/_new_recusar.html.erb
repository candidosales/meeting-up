<div class="modal fade" id="recusar-convite-<%=convite.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
	    <div class="modal-content">
	    	<div class="panel panel-danger">
		        <div class="panel-heading">
		            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		            <h4 class="modal-title" id="myModalLabel">Recusar convite</h4>
		        </div>
				<%= simple_form_for :new_recusar, :url =>  recusar_convite_path(convite), :method => "PATCH", html: {role: "form"} do |f| %>
	        		<div class="panel-body">
	        			<div class="row">
						  <%= f.error_notification %>

						  <%= f.input :motivo, label: 'Motivo', as: :text, wrapper_html: {class: 'col-md-10'}, input_html: {rows: 3, style: 'width: 100%'} %>
						</div>
					</div>  
				  <div class="panel-footer">
					  <%= f.button :submit, t('.save', :default => t("helpers.links.save")), class: 'btn btn-primary', data: {disable_with: 'Recusando convite...'} %>

					  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), '#', :class => 'btn btn-outline btn-default', data: {dismiss: 'modal'} %>
				  </div>
				<% end %>
			</div>
		</div>
	</div>
</div>