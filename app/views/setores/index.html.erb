<%- model_class = Setor -%>
<% content_for :title_page do %>
  <%=t '.title', :default => model_class.model_name.human.pluralize %>
<% end %>

<div class="row">
    <div class="col-lg-12">
      <%= link_to t('.new', :default => t("setores.new.title")), new_setor_path(), :class => "btn btn-success pull-right" %>

    </div>
</div>
<br />

<div class="panel panel-default">
  <div class="panel-heading">
    <%= form_tag setores_path, :method => 'get', role: 'form', class: 'simple_form'  do %>
      <div class="row">
        <div class= "form-group col-md-6">
           <%= label_tag(:por_descricao, "Descrição:", class: 'control-label') %>
           <div>
            <%= text_field_tag :por_descricao, params[:por_descricao],  class: 'form-control' %>
           </div>
        </div>
      </div>

      <div clas="row">
        <%= submit_tag "Procurar", :nome => nil, :class => 'btn btn-primary' %>
      </div>
    <% end %>

  </div>
  <div class="panel-body">
    <br/>
    <%= page_entries_info @setores %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Descrição </th>
            <th>Opções</th>
          </tr>
        </thead>
        
        <tbody>
          <% @setores.each do |s| %>
            <tr>
              <td><%= link_to s.descricao, setor_path(s) %></td>
              <td>
                 <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_setor_path(s) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
  <div class="panel-footer">
    <%= paginate @setores %>
  </div>
</div>

